{
    "info": {
        "name": "Library Management System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080/api/v1"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login as Admin",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@library.com\",\n  \"password\": \"admin@123\"\n}"
                        }
                    }
                },
                {
                    "name": "Login as Staff",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"staff1@library.com\",\n  \"password\": \"staff@123\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Books (Admin)",
            "item": [
                {
                    "name": "Add New Book",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/admin/books",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"bookTitle\": \"Harry Potter\",\n  \"category\": \"FICTION\",\n  \"coverUrl\": \"https://example.com/hp.jpg\",\n  \"quantity\": 3\n}"
                        }
                    }
                },
                {
                    "name": "Get All Books",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/admin/books",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Borrow",
            "item": [
                {
                    "name": "Issue Book",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/borrow/issue",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"bookPublicId\": \"REPLACE_WITH_BOOK_PUBLIC_ID\",\n  \"userPublicId\": \"REPLACE_WITH_USER_UUID\"\n}"
                        }
                    }
                },
                {
                    "name": "Return Book",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/borrow/return/1",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Fines",
            "item": [
                {
                    "name": "Get My Fines",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/fines",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Pay Fine",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/fines/1/pay",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Donations",
            "item": [
                {
                    "name": "Submit Donation",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/donations",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"bookTitle\": \"The Great Gatsby\",\n  \"author\": \"F. Scott Fitzgerald\",\n  \"quantityOffered\": 10\n}"
                        }
                    }
                },
                {
                    "name": "Get Pending Donations (Admin)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/admin/donations",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Approve Donation (Admin)",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/admin/donations/1/approve",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"quantityApproved\": 5,\n  \"adminNotes\": \"Good condition books accepted\"\n}"
                        }
                    }
                }
            ]
        }
    ]
}